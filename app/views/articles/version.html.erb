<% if @article.versions.count > 0 %>
    <div class="row">
      <div class="span9">
        <div class="widget widget-table">
          <div class="widget-header">
            
            <h3><i class="fa fa-tag"></i>Change History (admin only)</h3>
          </div> <!-- /widget-header -->
          <div class="widget-content">

            <table class="table table-striped table-bordered">
              <thead>
              <tr>
                <th>Date</th>
                <th>Event</th>
                <th>User</th>
                <th>Changes</th>
              </tr>
              </thead>
              <tbody>
              <% @article.versions.each do |history|%>
              <tr>
                <th><%=history.created_at%></th>
                <th><%=history.event%></th>
                <th><%=history.version_author%></th>
                <th><%=history.changeset%></th>
              </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
<% end %>